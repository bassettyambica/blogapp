<% include partials/header.ejs %>
    <div class="ui main text container segment">
        <div class="ui huge header">Edit <%= blog.title %></div>
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
            <div class="field">
                <label>Title: </label>
                <input type="text" value="<%= blog.title %>" name="blog[title]">
            </div>
            <div class="field">
                <label class="field">Image</label>
                <input type="text" value="<%= blog.image %>" name="blog[image]">
            </div>
            <div class="field">
                <label class="field">Blog Content</label>
                <textarea name="blog[body]"><%= blog.body %></textarea>
            </div>
            <div class="field">
                <input type="submit" class="ui basic big button blue ">
            </div>
 
        </form>
    </div>



<% include partials/footer.ejs %>