
<% include partials/header %>
   <div class="ui main text container">
   	<div class="ui huge header">Blog Site</div>
   	<div class="ui search">
      <div class="ui icon input">
            <form action="/search" method="GET" class="ui form">
                <div class="item">
                <input type="text" class="prompt" name="term" placeholder="search for blogs..">
                <button id="#search" type="submit" class="ui small basic button rounded" tabindex="0"><i class="search icon"></i> </button>
                </div>
            </form>
      </div>
    </div>
    <div class="ui top attached segment">
    <div class="ui divided items">
	<% blogs.forEach(function(blog){ %>
	 <div class="item">
	    <div class="image">
	      <img src="<%= blog.image %>">
	    </div>
	    <div class="content">
	      <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
	      <div class="meta">
	        <span class="cinema"><%= blog.created.toDateString() %></span>
	      </div>
	      <div class="description">
	        <p><%= blog.body.substring(0,100); %></p>
	      </div>
	      <div class="extra">
	        <a href="/blogs/<%=blog._id %>" class="ui floated basic violet button">
	          Read More
	          <i class="right chevron icon"></i>
	        </a>
	      </div>
	    </div>
	  </div>
	<% }); %>
</div>
</div>
    
  </div>
<% include partials/footer %>

 
